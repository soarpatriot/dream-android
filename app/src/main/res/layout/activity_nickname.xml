<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools" android:layout_width="match_parent"
    android:layout_height="match_parent" android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    android:paddingBottom="@dimen/activity_vertical_margin"
    tools:context="cn.dreamreality.NicknameActivity">


    <LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:tools="http://schemas.android.com/tools" android:layout_width="match_parent"
        android:layout_height="match_parent" android:gravity="center_horizontal"
        android:orientation="vertical">

        <android.support.v7.widget.Toolbar
            xmlns:app="http://schemas.android.com/apk/res-auto"
            android:id="@+id/toolbar"
            app:theme="@style/PurpleBlueToolbar"
            app:popupTheme="@style/PurplePopupMenu"
            android:layout_height="wrap_content"
            android:layout_width="match_parent"
            android:title="@string/action_register"
            >

        </android.support.v7.widget.Toolbar>


        <LinearLayout android:id="@+id/email_login_form"
            android:padding="20dp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">


            <EditText android:id="@+id/mobile_text" android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:visibility="gone"/>

            <EditText android:id="@+id/nick_name" android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:hint="@string/nick_name"

                android:maxLines="1"
                android:singleLine="true" />



            <Button android:id="@+id/finish_register"
                style="?android:textAppearanceSmall"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="16dp"
                android:textSize="18dp"
                android:text="@string/resend_verify_code"
                android:textColor="@color/white_opaque"
                android:textStyle="bold" />


        </LinearLayout>



    </LinearLayout>


</RelativeLayout>
