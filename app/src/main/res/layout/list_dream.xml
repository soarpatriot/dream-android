<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"

    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:tools="http://schemas.android.com/tools"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:gravity="center_horizontal"
        android:orientation="vertical"
        android:background="@color/white_opaque"
        android:layout_marginBottom="10dp"
        >


        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_marginTop="10dp"
            android:background="@color/white_opaque"
            android:paddingLeft="10dp"
            android:paddingRight="10dp"

            android:layout_height="50dp">
            <TextView
                android:id="@+id/author_id_text_view"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:visibility="gone" />
            <ImageView
                android:id="@+id/imageView1"
                android:background="@color/white_opaque"
                android:layout_width="50dp"
                android:layout_height="50dp"
                android:src="@drawable/noavatar" />
            <TextView
                android:id="@+id/author_text_view"
                android:layout_width="wrap_content"

                android:layout_marginLeft="20dp"
                android:gravity="center_vertical"
                android:textSize="14dp"
                android:layout_toRightOf="@+id/imageView1"
                android:background="@color/white_opaque"
                android:text="dreamer"
                android:layout_height="match_parent" />
        </RelativeLayout>

        <RelativeLayout
            android:layout_marginTop="20dp"
            android:layout_marginBottom="20dp"
            android:padding="10dp"

            android:background="@color/white_opaque"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <TextView
                android:id="@+id/id_text_view"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:background="@color/white_opaque"
                android:visibility="gone"
                />
            <TextView
                android:id="@+id/dream_text_view"
                android:textColor="@color/grey_black"
                android:background="@color/white_opaque"
                android:textSize="16dp"
                android:layout_width="match_parent"
                android:minHeight="60dp"
                android:layout_height="wrap_content" />
            <TextView
                android:id="@+id/reality_text_view"
                android:textColor="@color/grey_black"
                android:background="@color/white_opaque"
                android:textSize="16dp"
                android:layout_width="match_parent"
                android:minHeight="60dp"
                android:layout_height="wrap_content"
                android:visibility="gone"/>
        </RelativeLayout>

        <RelativeLayout
            android:padding="10dp"

            android:layout_marginTop="10dp"
            android:layout_marginBottom="10dp"
            android:layout_width="match_parent"
            android:background="@color/white_opaque"
            android:layout_height="wrap_content">

            <TextView
                android:id="@+id/help_text_view"
                android:textSize="12dp"
                android:text="102 帮助"
                android:background="@color/white_opaque"
                android:textColor="@color/apptheme_color"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content" />

            <TextView
                android:id="@+id/thumbup_text_view"
                android:background="@color/white_opaque"
                android:layout_marginLeft="10dp"
                android:layout_toRightOf = "@+id/help_text_view"
                android:textSize="12dp"
                android:text="1024 支持"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content" />
            <TextView
                android:id="@+id/comment_text_view"
                android:background="@color/white_opaque"
                android:layout_marginLeft="10dp"
                android:layout_toRightOf = "@+id/thumbup_text_view"
                android:textSize="12dp"
                android:text="2048 评论"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content" />
        </RelativeLayout>
        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_marginTop="10dp"
            android:background="@color/white_opaque"

            android:layout_height="wrap_content">
            <ImageView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@color/white_opaque"

                android:src="@drawable/hr" />
        </RelativeLayout>
        <RelativeLayout
            android:padding="10dp"

            android:layout_width="match_parent"
            android:background="@color/white_opaque"
            android:layout_height="wrap_content">
            <ImageButton
                android:maxWidth="20dp"
                android:maxHeight="20dp"
                android:layout_width="20dp"
                android:layout_height="20dp"
                android:background="@color/white_opaque"
                android:src="@drawable/up"
                android:text="顶"
                android:id="@+id/up_btn"
                android:scaleType="fitXY" />

            <!--
            <Button

                android:text="踩"
                android:id="@+id/down_btn"
                android:layout_marginLeft="20dp"
                android:layout_toRightOf = "@+id/up_btn"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content" /> -->

        </RelativeLayout>
    </LinearLayout>

</LinearLayout>