<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools" android:layout_width="match_parent"
    android:layout_height="match_parent" android:gravity="center_horizontal"
    android:orientation="vertical">

    <android.support.v7.widget.Toolbar
        xmlns:app="http://schemas.android.com/apk/res-auto"
        android:id="@+id/toolbar"
        app:theme="@style/PurpleBlueToolbar"
        app:popupTheme="@style/PurplePopupMenu"
        android:layout_height="?attr/actionBarSize"
        android:layout_width="match_parent"
        android:title="@string/action_dream"
        >
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/dream_text"
            android:textColor="@color/white_opaque"
            android:textSize="20dp"
            android:textAlignment="center"
            android:layout_centerHorizontal="true" />


    </android.support.v7.widget.Toolbar>

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:paddingLeft="@dimen/activity_horizontal_margin"
        android:paddingRight="@dimen/activity_horizontal_margin"
        android:paddingTop="@dimen/activity_vertical_margin"
        android:paddingBottom="@dimen/activity_vertical_margin"

        >


        <LinearLayout
            android:orientation="vertical"
            android:layout_width="fill_parent"
            android:layout_height="fill_parent"
            android:layout_alignParentTop="true"
            android:layout_centerHorizontal="true"
            android:layout_marginTop="20dp"
            android:weightSum="1">
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/dream_text"
                android:id="@+id/dream_text"
                android:textColor="@color/apptheme_color"
                android:textSize="18dp"
                android:layout_alignParentTop="true"
                android:layout_centerHorizontal="true" />


            <EditText
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:inputType="textMultiLine"
                android:ems="10"
                android:height="120dp"
                android:hint="@string/write_dream_hint"
                android:id="@+id/dream_edit_text"
                android:textSize="16dp"
                android:layout_gravity="left|top" />
            <TextView
                android:layout_marginTop="10dp"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textSize="18dp"
                android:textColor="@color/pitch_black"
                android:text="@string/reality_text"
                android:id="@+id/reality_text"
                android:layout_alignParentTop="true"
                android:layout_centerHorizontal="true" />

            <EditText
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:inputType="textMultiLine"
                android:ems="10"

                android:height="120dp"
                android:hint="@string/write_reality_hint"
                android:id="@+id/reality_edit_text"
                android:textSize="16dp"
                android:autoText="false"
                android:layout_gravity="top" />

            <Button
                android:layout_marginTop="5dp"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textColor="@color/white_opaque"
                android:text="@string/submit_text"
                android:id="@+id/submit_btn"
                android:layout_gravity="right" />
        </LinearLayout>


    </RelativeLayout>

</LinearLayout>

